<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.mymusicapp.MainActivity">

    <TextView
        android:id="@+id/sixties"
        style="@style/CategoryStyle"
        android:background="@drawable/sixties"/>

    <TextView
        android:id="@+id/seventies"
        style="@style/CategoryStyle"
        android:background="@drawable/seventies"/>

    <TextView
        android:id="@+id/eighties"
        style="@style/CategoryStyle"
        android:background="@drawable/eighties"/>

    <TextView
        android:id="@+id/nineties"
        style="@style/CategoryStyle"
        android:background="@drawable/nineties"/>

    <TextView
        android:id="@+id/thousand"
        style="@style/CategoryStyle"
        android:background="@drawable/thousand"/>

    <TextView
        android:id="@+id/thousandten"
        style="@style/CategoryStyle"
        android:background="@drawable/thousandten"/>

    </LinearLayout>
</ScrollView>
